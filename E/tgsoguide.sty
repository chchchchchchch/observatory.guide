  \newcommand\pageinfo[4]{%
   \if\relax\detokenize{#4}\relax
    % #4 EMPTY -> DO NOTHING
    \else % #4 NON-EMPTY
    \if\relax\detokenize{#3}\relax
     \makebox[\textwidth][l]{%
      \hspace{#1}%
       \parbox{\textwidth}{%
        \vspace{#2}
         \colorbox{black}{%
         {\small\parbox{.97\textwidth}{
           \smallskip
            \color{white} #4 %
             \smallskip}
     }}}}
     \fi
    \fi
  }
